<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
   android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".landing.GuestUser.GuestFregment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/rojgarrakshak" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Register"
        style="@style/button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register as New User"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/AlreadyUser"
        style="@style/button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already Existing User"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ContinueasaGuest" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:weightSum="3"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@color/app_color"
            android:layout_weight="1.3"
            android:layout_height="2dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:text="OR"
            android:textSize="16dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>


        <View
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:background="@color/app_color"
            android:layout_marginRight="10dp"
            android:layout_weight="1.3"
            android:layout_height="2dp"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ContinueasaGuest"
        style="@style/button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue as a Guest"
        android:layout_marginTop="@dimen/_60sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</LinearLayout>